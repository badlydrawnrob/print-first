/*!
 * == ECSS 101 =================================================================
 * Isolated, predictable and maintainable styles http://ecss.io/
 * `.nsp`       - A micro namespace can provide context
 * `-Component` - The name or the file or logic/file that creates this item
 * `_ChildNode` - Any child nodes are delineated with an underscore
 * `-variant`   - variant, modifier or state
 * =============================================================================
 */

@import './ecss-config'

// Page setup ==================================================================

.pg-Wrapper
  center()
  baseline-grid()

// Typography ==================================================================

.type-Wrapper
  clearfix()

.type-Group
  column(1/2, $cycle: 2)
  padding: $spacing.base

.type-Group-small
  body-1()

.type-Group-box
  background: alpha(#ccc, 50%)

.type-Group-align
  margin-top: $spacing.half

.type-GroupHeading
  .type-Group-align &
    margin-bottom: $spacing.base

  .type-Group-align-two &
    margin-bottom: $spacing.half
    padding-top: $spacing.quarter


// Components ==================================================================
// - Not strictly ECSS but does the job for now

.btn
  button()

.btn-primary
  button-primary()
