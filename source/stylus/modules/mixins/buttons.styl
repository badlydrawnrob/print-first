button()
  font-family: $btn.font.family
  font-weight: $btn.font.weight
  line-height: $btn.line.height
  display: inline-block
  margin: 0
  padding: $btn.padding
  cursor: pointer
  text-align: center
  vertical-align: middle
  white-space: nowrap
  text-decoration: none
  color: $btn.text.color
  border: 0 none
  border-radius: $btn.border.radius
  background-color: $btn.background.color

  // States ====================================================================

  &:hover
    background-color: lighten($btn.background.color, 12%)

  &:active
    background-color: darken($btn.background.color, 5%)
    box-shadow: inset 0 0 $spacing.third hsla(0, 0%, 0%, 0.25)

  &:active:focus
    outline: 0 none

  &:disabled
    cursor: not-allowed
    pointer-events: none
    opacity: 0.50
    box-shadow: none
    text-shadow: none

// Colors ======================================================================

button-primary()
  color: $btn.primary.text.color
  background-color: $btn.primary.background.color

  &:hover
    background-color: lighten($btn.primary.background.color, 12%)

  &:active
    background-color: darken($btn.primary.background.color, 5%)
