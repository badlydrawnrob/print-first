// Notes: Hashes ===============================================================
// Source order matters. So we set some sensible `$default-` values to make
// them easier to override ...
// - Override the hashes, not the `$default-`s!
// - http://bit.ly/2jPk8qE


// Fonts =======================================================================
// - #1 Set in `typography.styl`
// - Material Design Typographic Scale: 12, 14, 16, 20, and 34
//   - Link: http://bit.ly/2j67oaR
//   - Line-height: http://bit.ly/2k7ygvG
//     - #2 Single lines only
//   - English and English-like scripts (Latin, Greek, and Cyrillic)

$default-font-family-sans-serif = $arial // #1
$default-font-family-serif = $times      // #1
$default-font-family-mono = $monaco      // #1

$default-font-size-pppppp = unit((112 / 16), 'rem') // (Display 4)
$default-font-size-ppppp  = unit((56 / 16), 'rem')  // (Display 3)
$default-font-size-pppp   = unit((45 / 16), 'rem')  // (Display 2)
$default-font-size-ppp    = unit((34 / 16), 'rem')  // (Display 1)
$default-font-size-pp     = unit((24 / 16), 'rem')  // (Headline)
$default-font-size-p      = unit((20 / 16), 'rem')  // (Title)
$default-font-size        = unit((16 / 16), 'rem')  // (Body)
$default-font-size-m      = unit((14 / 16), 'rem')  // (Body 2, Body 1,
$default-font-size-mm     = unit((12 / 16), 'rem')  // (Caption)

$default-line-height-pppppp = (24 / 16) // #2
$default-line-height-ppppp  = (24 / 16) // #2
$default-line-height-pppp   = (48 / 45)
$default-line-height-ppp    = (40 / 34)
$default-line-height-pp     = (32 / 24)
$default-line-height-p      = (28 / 20)
$default-line-height        = (24 / 16)
$default-line-height-m      = (24 / 14)
$default-line-height-mm     = (20 / 14)


// Spacing =====================================================================

$default-spacing-base   = unit($default-line-height, 'rem')
$default-spacing-double = ($default-spacing-base * 2)
$default-spacing-triple = ($default-spacing-base * 3)
$default-spacing-half   = ($default-spacing-base / 2)
$default-spacing-third  = ($default-spacing-base / 3)
$default-spacing-fourth = ($default-spacing-base / 4)
$default-spacing-fifth  = ($default-spacing-base / 5)
$default-spacing-sixth  = ($default-spacing-base / 6)
$default-spacing-micro  = 2px

// Borders =====================================================================

$default-border-radius = 5px

// Colours =====================================================================

$default-color-gray-darkest = #222
$default-color-gray-darker = #444
$default-color-gray-dark = #777
$default-color-gray = #aaa
$default-color-gray-light = #dedede
$default-color-gray-lighter = #efefef
$default-color-gray-lightest = #f8f8f8
