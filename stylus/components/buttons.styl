// =============================================
// Components: Buttons
// =============================================

.btn
  antialiasing()

  font-family: $btn.font.family
  font-weight: $btn.font.weight
  line-height: $btn.line.height
  display: inline-block
  margin: 0
  padding: $btn.padding
  cursor: pointer
  text-align: center
  vertical-align: middle
  white-space: nowrap
  text-decoration: none
  color: $btn.text.color
  border: 0 none
  background-color: $btn.background.color

  // States ====================================

  &:hover
    background-color: lighten($btn.background.color, 2%)

  &:active,
  &.is-active
    background-color: darken($btn.background.color, 2%)
    box-shadow: inset 0 0 $spacing.third hsla(0, 0%, 0%, 0.25)

  &:active:focus
    outline: 0 none

  &:disabled,
  &[disabled],
  &.is-disabled
    cursor: not-allowed
    pointer-events: none
    opacity: 0.50
    box-shadow: none
    text-shadow: none

// Shapes ====================================

.btn-round,
input[type="button"].btn-round,
input[type="submit"].btn-round
  border-radius: $btn.border.radius

// Sizes ====================================

.btn-xs
  font-size: $btn.xs.font.size
  padding: $btn.xs.padding

.btn-sm
  font-size: $btn.sm.font.size
  padding: $btn.sm.padding

.btn-block
  display: block

@media (min-width: $screen.sm)
  .btn-lg,
  .btn-block
    font-size: $btn.lg.font.size
    padding: $btn.lg.padding

// Colors ====================================

.btn-primary
  color: $btn.primary.text.color
  background-color: $btn.primary.background.color

.btn-primary:hover
  background-color: lighten($btn.primary.background.color, 4%)

.btn-primary:active,
.btn-primary.is-active
  background-color: darken($btn.primary.background.color, 4%)

// Groups ====================================

.btn-group .btn
  margin: $btn.group.margin

  @media (min-width: $screen.sm)
    &.btn-lg
      margin: $btn.lg.group.margin

  &:first-child
    margin-left: 0

  &:last-child
    margin-right: 0
